<script>
    function calculateSMA(data, windowSize) {
        let sma = [];
        for (let i = 0; i < data.length; i++) {
            if (i < windowSize) {
                sma.push(null);
                continue;
            }
            let sum = 0;
            for (let j = 0; j < windowSize; j++) {
                sum += data[i - j];
            }
            sma.push(sum / windowSize);
        }
        return sma;
    }
function fetchDetails(url, el) {
    fetch(url)
        .then(response => response.text())
        .then(data => {
            const detailsElement = el.closest('[x-data]').querySelector('[x-html="details"]');
            detailsElement.innerHTML = data;
            
            // Rechercher et exÃ©cuter les scripts inclus dans le HTML injectÃ©
            const scripts = detailsElement.querySelectorAll('script');
            scripts.forEach(script => {
                eval(script.innerText);  // Attention : utilisation d'eval pour exÃ©cuter le script
            });
        })
        .catch(error => console.error('Erreur lors de la rÃ©cupÃ©ration des dÃ©tails:', error));
}

</script>
